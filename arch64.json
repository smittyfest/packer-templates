{
  "variables": {
    "arch_release": "2016.08.01",
    "arch_sha1": "6db5a9e46267ba7ec4d9ae79d141e5a6d9d3cf88"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "ArchLinux_64",
      "guest_additions_mode": "disable",
      "iso_url": "http://archlinux.surlyjake.com/archlinux/iso/{{ user `arch_release` }}/archlinux-{{ user `arch_release` }}-dual.iso",
      "iso_checksum": "{{ user `arch_sha1` }}",
      "iso_checksum_type": "sha1",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_timeout": "30m",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "disk_size": 20480,
      "hard_drive_interface": "sata",
      "http_directory": "srv",
      "boot_wait": "10s",
      "boot_command": [
        "<enter><wait10><wait10>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/install-base.sh<enter><wait5>",
        "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
        "/usr/bin/bash ./install-base.sh<enter>"
      ]
    }
  ],
  "provisioners": [
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "arch64.box",
      "compression_level": 9
    }
  ]
}
